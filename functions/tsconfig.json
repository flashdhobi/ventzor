{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@functions/*": [
        "src/functions/*"
      ],
      "@types/*": [
        "src/types/*"
      ]
    },
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}